@model P50_1_19.Models.User
@{
    ViewBag.Title = "Изменение пользователя";
}
<form asp-action="edit" asp-controller="home">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="email" asp-for="Email" placeholder="Email" class="form-control" />
    </div>
    <div class="form-group">
        <input type="text" asp-for="Login" placeholder="Login" class="form-control" />
    </div>
    <div class="form-group">
        <input type="text" asp-for="Password" placeholder="Password" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Изменить" class="btn btn-default" />
    </div>
</form>