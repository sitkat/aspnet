@model P50_1_19.Models.RegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style1.css" />

</head>
<body>
    <form method="post" asp-controller="Account" asp-action="Register">
        <div asp-validation-summary="ModelOnly"></div>
        <label for="signin">Регистрация</label>
        <div id="wrapper">
            <input asp-for="Email" id="email" placeholder="Почта" type="text">
            <input asp-for="Login" id="email" placeholder="Логин" type="text">
            <input asp-for="Password" id="pass" placeholder="Пароль" type="password">
            <input asp-for="PasswordConfirm" id="pass" placeholder="Повторите пароль" type="password">
        </div>
        <button type="submit">Регистрация</button>
    </form>
</body>
</html>
